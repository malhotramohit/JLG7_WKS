package edu.gyansetu.tcs.exceptionhandling;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class WebApp {

	public static void main(String[] args) {

		loadHomePage();
		clickOnFindUser();
		getUserByUserId();
		findUserFromDB();
	}

	private static void loadHomePage() {
		// TODO Auto-generated method stub
		clickOnFindUser();
	}

	private static void clickOnFindUser() {
		// TODO Auto-generated method stub
		getUserByUserId();

	}

	private static void getUserByUserId() {
		// TODO Auto-generated method stub
		findUserFromDB();
	}

	private static void findUserFromDB() {
		
		try {
			Connection connection = DriverManager.getConnection("jdbc:postgre://local");
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			throw new UserNotFoundException()
		}
	}

}
